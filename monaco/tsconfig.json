{
  // The original options are commented out
  // Original: https://github.com/microsoft/monaco-editor-samples/tree/master/browser-esm-webpack-typescript-react
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"], // "lib": ["dom", "es5", "es2015.collection", "es2015.promise"],
    "baseUrl": "./node_modules",
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext", //commonjs
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": [],
    "jsx": "react", // preserve
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
